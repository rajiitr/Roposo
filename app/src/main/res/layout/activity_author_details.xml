<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlAuthorDetails">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        android:id="@+id/tbAuthorDetails" android:background="@color/custom_primary_color"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="parallax" android:elevation="4sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAuthorDetails" android:scrollbars="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below= "@+id/tbAuthorDetails"/>

</RelativeLayout>